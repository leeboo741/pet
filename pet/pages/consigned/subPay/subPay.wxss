/* pages/consigned/subPay/subPay.wxss */

.pay-info-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.title{
  font-size: 40rpx;
  color: black;
}

.value{
  font-size: 35rpx;
  color: gray;
}

.pay-info-amount{
  font-size: 50rpx;
  color: #ee2c2c;
  font-weight: bold;
}

.qrcode-image {
  width: 300rpx;
  height: 300rpx;
  margin-top: 80rpx;
}

.other-pay-button-box{
  width: 100%;
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.other-pay-button{
  margin-top: 30rpx;
  width: 80%;
}

.other-pay-type-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 80%;
}

.other-pay-type-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 32rpx;
}

.pay-button{
  margin-top: 30rpx;
  width: 80%;
}