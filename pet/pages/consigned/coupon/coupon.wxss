/* pages/consigned/coupon/coupon.wxss */
.coupon-item{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.coupon-item-info{
  border-radius: 8rpx;
  box-shadow: 0rpx 0rpx 40rpx #cccccc;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink: 0;
  flex-grow: 1;
  margin: 20rpx;
}

.coupon-item-info-left{
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-item-image{
  width: 100rpx;
  height: 120rpx;
  margin: 20rpx 10rpx;
}

.coupon-item-info-right{
  display: flex;
  flex-direction: column;
}

.coupon-item-number{
  font-size: 30rpx;
  color: #ee2c2c;
  margin: 10rpx 10rpx 10rpx 0rpx;
  flex-wrap: wrap;
}

.coupon-item-title{
  font-size: 30rpx;
  color: #464547;
  margin: 10rpx 10rpx 10rpx 0rpx;
}

.coupon-item-name{
  font-size: 26rpx;
  color: gray;
  margin: 10rpx 10rpx 10rpx 0rpx;
}

.coupon-item-time{
  font-size: 23rpx;
  color: lightpink;
  margin: 10rpx 10rpx 10rpx 0rpx;
}

.coupon-item-receive{
  display: flex;
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  box-shadow: 0rpx 0rpx 40rpx #cccccc;
  margin: 20rpx 20rpx 20rpx 0rpx;
}

.coupon-item-receive-bg{
  width: 100%;
  height: 100%;
}