/* pages/registerStation/registerStation.wxss */

.get-code-button{
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
}

.get-able{
  background: white;
  border: 1rpx solid #778899;
}

.get-disable{
  background: rgb(236, 236, 236);
  border: 1rpx solid #778899;
}

.non-null-icon{
  color: #ee2c2c;
  font-size: 32rpx;
  font-weight: bold;
}

.apply-button{
  width: 90%;
  margin: 30rpx auto;
  background: #ee2c2c;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  border-radius: 10rpx;
}

.empty-item-box{

}

.item-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.service-item{
  padding: 4rpx 10rpx;
  margin: 5rpx 8rpx;
  border-radius: 8rpx;
  background: coral;
  color: white;
}