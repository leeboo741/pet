/* pages/me/authenticateManager/personalAuthenticate/index.wxss */
.normal-text{
  color: #778899;
}

.placeholder-text{
  color: lightgray;
}

.item-1{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-title{
  width: 160rpx;
  margin-right: 20rpx;
}

.item-input{
  flex-grow: 1;
  color: #778899;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
}

.item-icon{
  padding: 5rpx 10rpx;
}

.input-content{
  flex-grow: 1;

}

.upload-image-item{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.upload-image-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.333333333%;
  /* height: 200rpx; */
  position: relative;
}

.progress-box{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
  background: rgba(0, 0, 0, 0.3);
}

.upload-image-content{
  height: 200rpx;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgb(245, 245, 245);
  position: relative;
}

.upload-image{
  width: 190rpx;
  height: 190rpx;
}

.upload-image-little{
  width: 80rpx;
  height: 80rpx;
}

.upload-explain-box{
  width: 66.6666666%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.upload-explain-image{
  flex-grow: 1;
  width: 100%;
  height: 200rpx;
}

.submit-button{
  width: 90%;
  border-radius: 10rpx;
  margin: 20rpx auto;
  height: 90rpx;
  background: linear-gradient(to right, rgb(255,147,87) , rgb(255, 51, 59));
  color: white;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
  box-shadow: 0rpx 0rpx 30rpx 5rpx #dad9d9;
}

.xieyi-sty{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  color: #B0B0B0;
  flex-flow: nowrap;
}

.alert-box{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  color: red;
}

.alert-item{
  padding: 5rpx;
}