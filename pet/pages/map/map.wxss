/* pages/map/map.wxss */
.map-content{
  width: 100vw;
  height: 100vh;
  z-index: 1;
}

.confirm-button{
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  background:  rgb(255, 51, 59);
  color: white;
  z-index: 2;
}

.address-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: white;
  position: absolute;
  bottom: 90rpx;
  z-index: 2;
}

.address-content{
  margin: 20rpx;
  flex-grow: 1;
  background: white;
}

.address-icon{
  margin: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background: white;
}