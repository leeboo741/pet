/* pages/balance/balanceFlow.wxss */

.flow-item{
  display: flex;
  flex-direction: column;
}

.flow-item-title{
  font-size: 36rpx;
  font-weight: bold;
}

.flow-type{
  font-size: 28rpx;
  margin-top: 8rpx;
}

.flow-item-detail{
  margin-top: 10rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}

.flow-item-detail-title{
  margin:0rpx 10rpx;
}

.flow-item-detail-item-box{
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}

.flow-item-detail-item{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flow-item-detail-item-name{
  font-size: 26rpx;
}

.flow-item-detail-item-value{
  font-size: 28rpx;
  color: goldenrod;
}

.flow-item-content{
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.balance-box{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flow-value{
  font-size: 38rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.flow-value-positive{
  color: #18c020;
}

.flow-value-negative{
  color: #ee2c2c;
}

.balance-value{
  color: #727e73;
  font-size: 34rpx;
}

.flow-time{
  font-size: 26rpx;
}