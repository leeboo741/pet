.container{
  width: 100%;
  height: 100%;
}

page {
  background-color: #F3F3F3;
}

.header {
  width: 760rpx;
  height: 100px;
  background-color: white;
}

.btn {
  width: 80rpx;
  display: flex;
  flex-direction: row-reverse;
}

.btn icon {
  margin-right: 50rpx;
  font-size: 32rpx;
}

.info {
  display: flex;
  flex-direction: row;
}

.pic {
  width: 200rpx;
  margin-left: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bill-info-box {
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
  height: 60rpx;
  align-items: center;
}

.bill-info-icon {
  width: 20rpx;
  margin-left: 20rpx;
  height: 20rpx;
  border: solid #FF8C00 1rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FF8C00;
}

.bill-info-icon icon {
  font-size: 20rpx;
  line-height: 20;
  color: red;
}

.bill-info {
  display: flex;
  justify-content: left;
  align-items: center;
}

.bill-info-billNo {
  margin-left: 10rpx;
  /* width: 300rpx; */
  flex-grow: 1;
  font-size: 32rpx;
  text-align: left;
}

.bill-info-way {
  display: flex;
  margin-bottom: 20rpx;
  justify-content: left;
  align-items: center;
}

.bill-info-way-date {
  flex-grow: 1;
  font-size: 32rpx;
  text-align: left;
  margin-left: 20rpx;
  font-family: sans-serif;
}

.bill-info-way-start {
  flex-grow: 1;
  text-align: right;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-way-split {
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-way-end {
  text-align: left;
  flex-grow: 1;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-pet {
  margin-bottom: 20rpx;
}

.bill-info-person{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}

.bill-info-person-label{
  font-family: sans-serif;
  font-size: 32rpx;
  flex-shrink: 0;
}

.bill-info-person-name{
  flex-grow: 1;
  margin-left: 20rpx;
  font-family: sans-serif;
  font-size: 32rpx;
}

.bill-info-person-phone{
  flex-grow: 1;
  margin-left: 20rpx;
  font-family: sans-serif;
  font-size: 32rpx;
}

.bill-info-pay {
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}

.bill-info-pay-info {
  text-align: center;
  width: 20%;
  font-size: 32rpx;
  font-family: sans-serif;
  font-weight: bold;
  color: red;
}

.bill-info-pay-money {
  text-align: right;
  width: 50%;
  font-size: 32rpx;
  font-family: sans-serif;
  font-weight: bold;
  color: #F1B000;
}

.bill-info-pay-label {
  font-family: sans-serif;
  font-size: 32rpx;
  width: 25%;
}


.bill-info-pet-type {
  text-align: left;
  width: 33%;
  font-size: 32rpx;
  margin-left: 20rpx;
  font-family: sans-serif;
}

.bill-info-pet-info {
  text-align: center;
  width: 20%;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-pet-money {
  color: #F1B000;
}

.bill-info-pet-mode {
  text-align: center;
  width: 30%;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-pet {
  display: flex;
  justify-content: left;
  align-items: center;
}

.bill-info-time {
  width: 300rpx;
  font-size: 12px;
  text-align: right;
}

.bill-operate-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.bill-operate-button{
  margin: 15rpx;
  font-size: 30rpx;
  color: white;
  background: rgb(100, 149, 237);
  text-align: center;
  padding: 10rpx;
  width: 150rpx;
  border-radius: 15rpx;
}


.bill-operate-button-complain{
  margin: 15rpx;
  font-size: 30rpx;
  color: white;
  background: rgb(216, 55, 55);
  text-align: center;
  padding: 10rpx;
  width: 150rpx;
  border-radius: 15rpx;
}

.pic image {
  width: 150rpx;
  height: 150rpx;
  border: solid #D4D4D4 5rpx;
  border-radius: 100rpx;
}

.userInfo {
  padding-top: 10rpx;
  padding-left: 20rpx;
  width: 450rpx;
}

.nikeName {
  font-size: 32rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
}

.phone{
  font-size: 28rpx;
  color: lightgray;
  font-family: Microsoft YaHei;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.mymoney {
  margin-top: 10rpx;
  display: flex;
  font-family: sans-serif;
  font-size: 32rpx;
  flex-direction: row;
}

.money {
  font-size: 15px;
  color: red;
}


.common {
  display: flex;
  padding-top: 20rpx;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.recharge {
  width: 100rpx;
  background-color: red;
  margin-left: 50rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
}

.fenxian {
  color: red;
  font-size: 32rpx;
  font-weight: bold;
  transform: rotate(90deg);
}

.description {
  padding-left: 20rpx;
  display: flex;
  justify-content: left;
  align-items: left;
}

.description label {
  font-family: sans-serif;
  font-size: 32rpx;
}


.btnCommon {
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.btnCommon label {
  font-size: 32rpx;
  font-family: sans-serif;
}

.btnCommon icon {
  color:#F1B000;
  font-size: 32px;
}

.btnOper {
  display: flex;
  width: 20%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.btnOper label {
  color: #BABABA;
  font-family: sans-serif;
}

.order{
  display: flex;
  flex-direction: row;
  margin-bottom: 1rpx;
  background: white;
  height: 8%;
}

.list-scroll{
  height: 92%;
}

.bill-type-button{
  flex-grow: 1;
  padding: 20rpx 0rpx;
  text-align: center;
  text-justify: center;
  line-height: 60rpx;
  font-size: 30rpx;
}

.selectedLine{
  border-style: none none solid none;
  border-color: rgb(211, 156, 105);
  border-width: 5rpx;
}

.bill-info-split-line{
  background: lightgray;
  width: 100%;
  height: 2rpx;
  margin-bottom: 20rpx;
}

.pop-view-bg{
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
}

.pop-view-mask{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background: rgba(14, 13, 13, 0.425);
}

.pop-view-content{
  position: absolute;
  top: 35%;
  left: 5%;
  background: white;
  border-radius: 8rpx;
  height: 100rpx;
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pop-view-input-area{
  width: 94%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-input{
  font-size: 32rpx;
  color: #778899;
  flex-grow: 1;
}

.search-button{
  flex-shrink: 0;
  padding: 10rpx 25rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: white;
  background: rgb(100, 149, 237);
  margin-left: 20rpx;
}

.empty-area{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 160rpx 40rpx;
  background: #00000000;
}

.empty-content{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.empty-title{
  font-size: 30rpx;
  color: #778899;
}