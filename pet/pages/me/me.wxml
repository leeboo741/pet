    </view>
    <!-- 已完成 -->
    <view wx:if="{{selectedBillType==3}}"
          wx:for="{{completeList}}" 
          wx:for-item="completeItem" 
          wx:for-index="completeIndex" 
          wx:key="{{completeIndex}}">
