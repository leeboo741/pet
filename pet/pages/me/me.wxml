        <view class='bill-info-pay'>
          <view class='bill-info-pay-label'>支付状态:</view>
          <view class='bill-info-pay-info'>{{completeItem.state}}</view>
          <view class='bill-info-pay-money'>￥{{completeItem.paymentAmount}}</view>
