/* pages/message/message.wxss */

.message-item{
  width: 95%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0px -2px 5px 2px #c4d2d2d2;
}

.message-item-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: 0;
}

.message-item-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #778899;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  top: 35rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 1;
  border-bottom: 1rpx solid lightgray;
}

.message-item-content{
  color: gray;
  margin: 80rpx 40rpx;
  min-height: 200rpx;
  font-size: 30rpx;
  z-index: 1;
}

.message-item-time{
  position: absolute;
  bottom: 35rpx;
  left: 40rpx;
  right: 40rpx;
  font-size: 26rpx;
  border-top: 1rpx solid lightgray;
  text-align: right;
  color: #778899;
}

.empty-area{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 160rpx 40rpx;
  background: #00000000;
}

.empty-content{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.empty-title{
  font-size: 30rpx;
  color: #778899;
}