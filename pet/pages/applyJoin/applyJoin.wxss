.content-box{
  margin: 400rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 70%;
}

.button-box{
  box-shadow: 0px -2px 5px 2px #F4F4F4;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 220rpx;
  height: 220rpx;
}

.button-image{
  width: 130rpx;
  height: 130rpx;
}

.button-title{
  font-size: 30rpx;
  color: #778899;
  margin-top: 15rpx;
}