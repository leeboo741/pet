/* pages/orderDetail/orderDetail.wxss */
.panel{
  background: rgb(240, 240, 240);
}

.remark{
  font-size: 28rpx;
  color: #1c2438;
  padding: 30rpx;
}

.steps{
  padding: 30rpx;
}

.step-title-area{
  display: flex;
  flex-direction: column;
}

.step-title-content{
  font-size: 28rpx;
  color: #1c2438;
}

.step-title-time{
  font-size: 24rpx;
  color: gray;
}

.step-content-area{
  display: flex;
  flex-direction: column;
}

.step-content-image-area{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.step-content-image-box{
  display: flex;
  width: 30%;
  height: 200rpx;
  align-items: center;
  justify-content: center;
  margin: 5rpx;
}

.step-content-image{
  width: 100%;
  height: 100%;
}

.step-content-video-area{

}

.video{

}

.view-box{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-content{
  flex-wrap: wrap;
}

.input-remark-box{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input-remark-input{
  border: 1rpx solid lightgray; 
  min-height: 80rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.input-remark-confirm{
  border-radius: 8rpx;
  background: #2d8cf0;
  color: white;
  padding: 10rpx 20rpx;
  text-align: center;
  flex-shrink: 0;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
}