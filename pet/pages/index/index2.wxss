/* pages/index/index2.wxss */

.page{
  position: relative;
  background: #f8f8f8;
}

.banner-image{
  width: 100%;
  height: 400rpx;
}

.business-navigation-area{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.business-navigation-content{
  width: 90%;
  display: flex;
  flex-direction: column;
  border-radius: 15rpx;
  box-shadow: 0px -2px 5px 2px #c4d2d2d2;
  margin-bottom: 100rpx;
  margin-top: 50rpx;
  overflow: hidden;
}

.business-navigation-title-area{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 20rpx;
  border-style: none none solid none;
  border-width: 1rpx;
  border-color: #f8f8f8;
}

.business-navigation-title-icon{
  width: 10rpx;
  border-radius: 5rpx;
  background: #ee2c2c;
  color: #00000000;
  font-size: 32rpx;
}

.business-navigation-title{
  padding: 0rpx 20rpx;
  font-size: 32rpx;
  color: #778899;
  font-weight: bold;
}

.business-navigation-search-area{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-style: none none solid none;
  border-width: 1rpx;
  border-color: #f8f8f8;
}

.business-navigation-search-box{
  display: flex;
  flex-direction: row;
  background: #f8f8f8;
  width: 94%;
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0rpx 20rpx;
}

.business-navigation-search-icon{
  display: flex;
  align-items: center;
  justify-content: center;
}

.business-navigation-search-input{
  font-size: 32rpx;
  height: 100%;
  width: 95%;
}

.business-navigation-search-placeholder{
  font-size: 32rpx;
  color: #aaaaaa;
}

.business-action-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.business-item{
  width: 49.5%;
  border-width: 1rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.business-item-icon{
  width: 60rpx;
  height: 60rpx;
  margin: 40rpx;
}

.business-item-title{
  margin: 0rpx 0rpx 40rpx 0rpx;
  font-size: 32rpx;
  color: #778899;
}

.business-item-splice-line{
  border-style: none solid solid none;
  border-width: 4rpx;
  border-color: #f8f8f8;
}

.business-item-splice-line-none{
  border-style: none none solid none;
  border-width: 4rpx;
  border-color: #f8f8f8;
}