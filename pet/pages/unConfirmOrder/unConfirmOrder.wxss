/* pages/unConfirmOrder/unConfirmOrder.wxss */
.bill-item{
  width: 94%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20rpx auto;
  border-radius: 10rpx;
  box-shadow: 0px -2px 5px 2px #F4F4F4;
}

.bill-info-split-line{
  background: lightgray;
  width: 100%;
  height: 2rpx;
  margin-bottom: 20rpx;
}

.bill-info-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.bill-info-box {
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
  height: 60rpx;
  width: 100%;
  align-items: center;
}

.bill-info-icon {
  width: 20rpx;
  margin-left: 20rpx;
  height: 20rpx;
  border: solid #FF8C00 1rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FF8C00;
}

.bill-info-icon icon {
  font-size: 20rpx;
  line-height: 20;
  color: red;
}

.bill-info {
  display: flex;
  justify-content: left;
  align-items: center;
}

.bill-info-billNo {
  margin-left: 10rpx;
  /* width: 300rpx; */
  flex-grow: 1;
  font-size: 32rpx;
  text-align: left;
}

.bill-info-way {
  display: flex;
  margin-bottom: 20rpx;
  justify-content: left;
  align-items: center;
}

.bill-info-way-date {
  flex-grow: 1;
  font-size: 32rpx;
  text-align: left;
  margin-left: 20rpx;
  font-family: sans-serif;
}

.bill-info-way-start {
  flex-grow: 1;
  text-align: right;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-way-split {
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-way-end {
  text-align: left;
  flex-grow: 1;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-pet {
  margin-bottom: 20rpx;
}

.bill-info-person{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}

.bill-info-person-label{
  font-family: sans-serif;
  font-size: 32rpx;
  flex-shrink: 0;
}

.bill-info-person-name{
  flex-grow: 1;
  margin-left: 20rpx;
  font-family: sans-serif;
  font-size: 32rpx;
}

.bill-info-person-phone{
  flex-grow: 1;
  margin-left: 20rpx;
  font-family: sans-serif;
  font-size: 32rpx;
}

.bill-info-pay {
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}

.bill-info-pay-info {
  text-align: center;
  width: 20%;
  font-size: 32rpx;
  font-family: sans-serif;
  font-weight: bold;
  color: red;
}

.bill-info-pay-money {
  text-align: right;
  width: 50%;
  font-size: 32rpx;
  font-family: sans-serif;
  font-weight: bold;
  color: #F1B000;
}

.bill-info-pay-label {
  font-family: sans-serif;
  font-size: 32rpx;
  width: 25%;
}


.bill-info-pet-type {
  text-align: left;
  width: 33%;
  font-size: 32rpx;
  margin-left: 20rpx;
  font-family: sans-serif;
}

.bill-info-pet-info {
  text-align: center;
  width: 20%;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-pet-money {
  color: #F1B000;
}

.bill-info-pet-mode {
  text-align: center;
  width: 30%;
  font-size: 32rpx;
  font-family: sans-serif;
}

.bill-info-pet {
  display: flex;
  justify-content: left;
  align-items: center;
}

.bill-info-time {
  width: 300rpx;
  font-size: 12px;
  text-align: right;
}

.bill-operate-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
}

.bill-operate-button{
  margin: 15rpx;
  font-size: 30rpx;
  color: white;
  background: rgb(100, 149, 237);
  text-align: center;
  padding: 10rpx;
  width: 150rpx;
  border-radius: 15rpx;
}


.bill-operate-button-complain{
  margin: 15rpx;
  font-size: 30rpx;
  color: white;
  background: rgb(216, 55, 55);
  text-align: center;
  padding: 10rpx;
  width: 150rpx;
  border-radius: 15rpx;
}

.bill-image-area{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
}

.bill-image-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 25%;
  height: 200rpx;
  position: relative;
}

.bill-image{
  width: 95%;
  height: 95%;
}

.bill-image-delete{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  background: white;
  border-radius: 25rpx;
  z-index: 1000;
}

.bill-video-area{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bill-video-box{
  position: relative;
  margin: 10rpx auto;
}

