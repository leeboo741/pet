/* pages/station/stationDetail/index.wxss */
.station-item{
  display: flex;
  flex-direction: column;
}

.station-item-head{
  display: flex;
}

.station-item-content{
  display: flex;
  flex-direction: row;
  margin: 15rpx;
  border-radius: 8rpx;
  box-shadow: 0px -2px 5px 2px #F4F4F4;
}

.station-item-foot{
  display: flex;
}

.station-logo-box{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.station-logo{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.station-info-box{
  display: flex;
  flex-direction: column;
  padding: 20rpx 10rpx;
}

.station-name{
  font-size: 38rpx;
  font-weight: bold;
  color: #778899;
  margin-bottom: 20rpx;
}

.station-business-hours{
  font-size: 30rpx;
  color: lightblue;
  margin-bottom: 20rpx;
}

.station-phone{
  font-size: 30rpx;
  color: lightblue;
  text-decoration: underline;
  margin-bottom: 20rpx;
}

.station-address{
  font-size: 30rpx;
  color: lightblue;
}

.station-service-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.service-item{
  padding: 4rpx 10rpx;
  margin: 5rpx 8rpx;
  border-radius: 8rpx;
  background: coral;
  color: white;
}