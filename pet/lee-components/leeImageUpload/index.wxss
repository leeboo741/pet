/* lee-components/leeImageUpload/index.wxss */

.upload-image{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

.upload-image-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.upload-image-item{
  width: 33.3333333%;
  height: 250rpx;
  position: relative;
}

.video-tap-box{
  z-index: 2;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  background: rgba(255, 255,255, 0.01);
}

.delete-box{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.delete-image{
  width: 40rpx;
  height: 40rpx;
  background: white;
  border-radius: 20rpx;
}

.progress-box{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 4;
  background: rgba(0, 0, 0, 0.7);
}

.upload-image-item-image{
  background: rgb(235, 235, 235);
  width: 95%;
  height: 97%;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index:1;
}

.upload-image-item-center{
  width: 120rpx;
  height: 120rpx;
}
